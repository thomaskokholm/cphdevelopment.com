{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "outDir": "build/tmp",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },

  "exclude": [
    "build",
    "dist",
    "node_modules",
    "src/main.aot.ts",
    "tmp"
  ],

  "angularCompilerOptions": {
    "debug": true,
    "genDir": "build"
  }
}
